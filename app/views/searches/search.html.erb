<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col'>
      <%= render 'search' %>
      <% if @range == "User" %>
        <h2>Users search for "<%= params[:word] %>" </h2>
        <table class="table table-hover table-inverse">
          <thead>
            <th>Name</th>
            <th>Introduction</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
              </tr>
              <tr>
                <td><%= user.introduction %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h2>Books search for "<%= params[:word] %>"</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
      <% end %>
        </table>
    </div>
  </div>
</div>